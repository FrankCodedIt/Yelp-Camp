<% layout('layouts/boilerplate') %>


<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/uploads/141103282695035fa1380/95cdfeef?w=400&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MzJ8fGxvZ2luJTIwcGFnZXxlbnwwfHwwfHx8MA%3D%3D" alt="">
                <div class="card-body">
                  <h5 class="card-title">Login</h5>
                    <form action="/login" method="post" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <button class="btn btn-success">Login</button>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>