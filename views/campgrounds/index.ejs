<% layout('layouts/boilerplate') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/stars.css" />
<h1 style="text-align: center">All Campgrounds</h1>
<div id="cluster-map"></div>

<nav
  class="navbar navbar-expand-lg bg-body-tertiary"
  aria-label="breadcrumb"
  style="padding-top: 25px"
>
  <div class="container-fluid">
    <h4>Book A Campsite</h4>
    <form class="d-flex" role="search">
      <input
        class="form-control me-2"
        type="search"
        placeholder="Search Campgrounds"
        aria-label="Search"
      />
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</nav>

<div class="row" style="padding-top: 15px">
  <div class="col-md-4">
    <div
      class="container d-flex justify-content-center align-items-center mt-5"
    >
      <div class="row">
        <div class="col-md-10 col-lg-12">
          <div class="card shadow">
            <div class="card-body">
              <div class="row">
                <div class="col-md-7"><h5 class="card-title">Filters</h5></div>
                <div class="col-md-5">
                  <a class="text-success" style="text-decoration: none" href=""
                    >Clear All</a
                  >
                </div>
              </div>
              <form
                action="/login"
                method="post"
                class="validated-form"
                novalidate
              >
                <div class="mb-3">
                  <label class="form-label text-success" for="arrivalDate"
                    >Arrival Date</label
                  >
                  <input type="date" name="arrivalDate" id="arrivalDate" />
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                  <label class="form-label text-success" for="nights"
                    >Number of nights:
                  </label>
                  <div
                    class="btn-toolbar mb-3"
                    role="toolbar"
                    aria-label="Toolbar with button groups"
                  >
                    <div
                      class="btn-group me-2"
                      role="group"
                      aria-label="First group"
                    >
                      <button type="button" class="btn btn-outline-secondary">
                        1
                      </button>
                      <button type="button" class="btn btn-outline-secondary">
                        2
                      </button>
                      <button type="button" class="btn btn-outline-secondary">
                        3
                      </button>
                      <span>&nbsp;</span>
                      <input
                        type="text"
                        class="form-control"
                        placeholder="Custom..."
                        aria-label="Input group example"
                        aria-describedby="btnGroupAddon"
                      />
                    </div>
                  </div>
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <div>
                  <label class="form-label text-success" for="rating"
                    >Rating:</label
                  >
                  <fieldset class="starability-basic">
                    <input
                      type="radio"
                      id="no-rate"
                      class="input-no-rate"
                      name="review[rating]"
                      value="1"
                      checked
                      aria-label="No rating."
                    />
                    <input
                      type="radio"
                      id="first-rate1"
                      name="review[rating]"
                      value="1"
                    />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input
                      type="radio"
                      id="first-rate2"
                      name="review[rating]"
                      value="2"
                    />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input
                      type="radio"
                      id="first-rate3"
                      name="review[rating]"
                      value="3"
                    />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input
                      type="radio"
                      id="first-rate4"
                      name="review[rating]"
                      value="4"
                    />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input
                      type="radio"
                      id="first-rate5"
                      name="review[rating]"
                      value="5"
                    />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <label class="form-label text-success" for="nights"
                  >Campsite Preference:</label
                >
                <div class="list-group">
                  <div class="mb-3 rounded">
                    <a href="#" class="list-group-item list-group-item-action">
                      <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">Primitive</h6>
                        <small>
                          <i class="fa-solid fa-campground"></i>
                          <i
                            class="fa-solid fa-droplet"
                            style="color: #74c0fc"
                          ></i>
                        </small>
                      </div>
                      <p class="mb-1 fs-10">
                        A basic campsite with only water hookups. Suitable to
                        tents and hammocks only.
                      </p>
                      <small class="text-muted fs-12 fst-italic"
                        >For the real outdoor adventurer.</small
                      >
                    </a>
                  </div>
                  <div class="mb-3 rounded">
                    <a href="#" class="list-group-item list-group-item-action">
                      <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">R/V</h6>
                        <small class="text-muted">
                          <i
                            class="fa-solid fa-caravan"
                            style="color: #930b12"
                          ></i>
                          <i
                            class="fa-solid fa-lightbulb"
                            style="color: #ffd43b"
                          ></i>
                          <i
                            class="fa-solid fa-droplet"
                            style="color: #74c0fc"
                          ></i>
                        </small>
                      </div>
                      <p class="mb-1 fs-10">
                        A R/V site with water and electricity hookups, and
                        enough room for a standard R/V trailer.
                      </p>
                      <small class="text-muted fs-12 fst-italic"
                        >For the somewhat adventurer with a touch of
                        comfort.</small
                      >
                    </a>
                  </div>
                  <div class="rounded">
                    <a href="#" class="list-group-item list-group-item-action">
                      <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">Pioneer</h6>
                        <small class="text-muted">
                          <i
                            class="fa-solid fa-house"
                            style="color: #e07510"
                          ></i>
                          <i
                            class="fa-solid fa-lightbulb"
                            style="color: #ffd43b"
                          ></i>
                          <i
                            class="fa-solid fa-droplet"
                            style="color: #74c0fc"
                          ></i>
                        </small>
                      </div>
                      <p class="mb-1 fs-10">
                        A standard chalet/cabin fitted with accomodating
                        amenities, including water and electricity hookups.
                      </p>
                      <small class="text-muted fs-12 fst-italic"
                        >For the soft life adventurer.</small
                      >
                    </a>
                  </div>
                </div>
                <div class="d-grid mt-4">
                  <button class="btn btn-success btn-block">Apply</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <table class="table table-hover rounded" style="background-color: #edf8e0">
      <thead class="text-muted fw-bold">
        <td></td>
        <td>Campground</td>
        <td>Location</td>
        <td>Capacity</td>
        <td>Amenities</td>
        <td></td>
      </thead>
      <% for (let campground of campgrounds) { %>
      <tr>
        <td>
          <% if(campground.images.length) { %>
          <img
            crossorigin="anonymous"
            src="<%=campground.images[0].url%>"
            alt=""
            class="img-fluid rounded mx-auto d-block"
          />
          <% } else { %>
          <img
            src="https://res.cloudinary.com/dc05shrl6/image/upload/v1748537249/YelpCamp/aa8apu2tptsdozv7gkbg.jpg"
            alt=""
            class="img-fluid rounded mx-auto d-block"
            crossorigin="anonymous"
          />
          <% } %>
        </td>
        <td>
          <h6><%=campground.title%></h6>
          <p class="card-text">
            <%=campground.description.substring(0, 20)%>...
          </p>
          <p class="text-success">Available</p>
        </td>
        <td><small class="text-muted"><%=campground.location%></small></td>
        <td><i class="fa-solid fa-users"></i> 5</td>
        <td style="text-align: center">
          <i class="fa-solid fa-lightbulb" style="color: #ffd43b"></i>
          <i class="fa-solid fa-droplet" style="color: #74c0fc"></i>
        </td>
        <td>
          <a href="/campgrounds/<%=campground._id%>" class="btn btn-success"
            >View</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </div>
</div>

<script>
  const mapToken = `<%- process.env.MAPBOX_TOKEN%>`;
  const campgrounds = {features: <%- JSON.stringify(campgrounds)%>}
</script>
<script src="/javascripts/clusterMap.js"></script>
